# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=~/.dotfiles/scripts/i3blocks/$BLOCK_NAME
separator_block_width=12
markup=pango
border_top=0
border_left=0
border_right=0
border_bottom=2

[memory]
label=MEM
interval=5
color=#8cffba
border=#8cffba
separator=false

[storage]
label=STOR
interval=15
color=#8cffba
border=#8cffba

[ssid]
interval=1
color=#00ff99
border=#00ff99
separator=false

[iface]
instance=wlo1
color=#00ff99
border=#00ff99
interval=1

[battery]
label=BAT
interval=10
color=#4db8ff
border=#4db8ff

[brightness]
label=BRI
interval=once
signal=1
color=#0a9dff
border=#0a9dff

[volume]
label=VOL
interval=1
signal=2
color=#f22168
border=#f22168

[temperature]
label=TEMP
interval=5
color=#f26192
border=#f26192

[mediaplayer]
interval=1
signal=10
color=#fade3e
border=#fade3e

[time]
