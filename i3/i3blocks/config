# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=10
markup=none

[memory]
label=MEM
separator=false
interval=5
color=#8cffba

[disk]
label=HOME
instance=/home/grelek
interval=15
color=#8cffba

[ssid]
command=echo "$(iw dev wlo1 link | grep SSID | cut -d " " -f 2-)"
interval=1
color=#00ff99
separator=false

[iface]
instance=wlo1
color=#00ff99
interval=1

[battery]
label=BAT
interval=10
separator=false
color=#4db8ff

[brightness]
label=BRI
# outputs rounded brightness
command=printf '%.*f\n' 0 $(xbacklight)
interval=1
color=#0a9dff

[volume]
label=VOL
interval=1
color=#f22168

[temperature]
label=TEMP
interval=5
color=#f26192

[mediaplayer]
instance=spotify
interval=1
signal=10
color=#fade3e

# OpenVPN support
#
# Support multiple VPN, with colors.
#[openvpn]
#interval=20

[time]
command=date '+%d.%m. %Y %H:%M'
interval=5
color=#ffa724
